@model List<Teacher>

<div class="container">
    <form action="Create" method="post">
        <div class="row">
            <div class="col-25">
                <label for="fname">Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="CourseName" name="CourseName" placeholder="Course Name....">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="Teacher">Teacher</label>
            </div>
             <div class="col-75">
            <select id="Teacher" name="Teacher">
                @foreach(var teacher in Model)
                {
                    <option value="@teacher.TeacherId">@teacher.TeacherName</option>
                }
            </select>
        </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname">Is Active</label>
            </div>
            <div class="col-75">
                <input type="checkbox" value="false" id="CourseStatus" name="CourseStatus">
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Submit">
        </div>
    </form>

</div>



